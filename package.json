{
  "name": "ulka",
  "version": "0.6.8-rc.2",
  "description": "Ulka - A simpler static site generator written in JavaScript",
  "main": "./src/index.js",
  "bin": {
    "ulka": "./bin/index.js"
  },
  "scripts": {
    "test": "cross-env FORCE_COLOR=1 jest tests",
    "test:e2e": "cross-env FORCE_COLOR=1 jest tests/e2e",
    "test:unit": "cross-env FORCE_COLOR=1 jest tests/unit",
    "eslint": "eslint \"**/*.js\" --color",
    "eslint:fix": "eslint \"**/*.js\" --fix --color",
    "prettier": "prettier \"**/*.js\"",
    "prettier:write": "prettier --write \"**/*.js\"",
    "lint-staged": "lint-staged",
    "prepublishOnly": "npm run eslint && npm run test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ulkajs/ulka.git"
  },
  "keywords": [
    "generator",
    "website",
    "jekyll",
    "blog",
    "ssg",
    "gatsby",
    "11ty",
    "html",
    "markdown",
    "templates",
    "static-site"
  ],
  "author": "Roshan Acharya",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ulkajs/ulka/issues"
  },
  "homepage": "https://github.com/ulkajs/ulka#readme",
  "dependencies": {
    "chalk": "^4.1.0",
    "chokidar": "^3.4.2",
    "commander": "^6.1.0",
    "front-matter": "^4.0.2",
    "hosted-git-info": "^3.0.6",
    "node-fetch": "^3.1.1",
    "portfinder": "^1.0.28",
    "prompts": "^2.3.2",
    "remarkable": "^2.0.1",
    "ulka-parser": "^0.4.1",
    "ws": "^7.3.1"
  },
  "devDependencies": {
    "@types/jest": "^26.0.14",
    "cheerio": "^1.0.0-rc.3",
    "cross-env": "^7.0.2",
    "eslint": "^7.10.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "jest": "^26.5.2",
    "lint-staged": "^10.4.0",
    "prettier": "^2.1.2"
  },
  "lint-staged": {
    "*.js": "eslint --fix"
  }
}
